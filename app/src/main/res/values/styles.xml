<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="bottomNavIndicator" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/NavBarLight</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/BackgroundLight</item>
        <item name="tabSelectedTextColor">@color/GreenDark</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/GreenDark</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>


    <!-- Custom Toolbar Style -->
    <style name="ThemeOverlay.MyPopupTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/BackgroundLight</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

</resources>